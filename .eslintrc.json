{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
      "semi": [2, "never"],
      "quotes": [2, "single"]
  },
  "plugins": ["jest"]
}
